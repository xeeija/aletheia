{
  "name": "aletheia-server",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --delay 2 dist/index.js",
    "start": "node dist/index.js",
    "build": "tsc --build && tsc-alias",
    "watch": "concurrently --kill-others -c auto -n \"tsc,alias\" \"npm run watch-tsc\" \"npm run watch-alias\"",
    "watch-tsc": "tsc --build --watch",
    "watch-alias": "tsc-alias --watch --verbose",
    "eventsub": "node dist/twitch/eventsub.js",
    "eventsub-watch": "nodemon --delay 2 dist/twitch/eventsub.js",
    "mock-api": "twitch mock-api start",
    "mock-auth": "node dist/twitch/mock/authorize.js",
    "ngrok": "ngrok start dev3000",
    "migrate": "prisma migrate dev --create-only --name",
    "generate": "prisma generate",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "lint:ci": "eslint --output-file eslint_report.json --format json ./src",
    "format": "prettier --write --log-level warn",
    "format:check": "prettier --check"
  },
  "keywords": [],
  "author": "xeeija",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.10.2",
    "@twurple/api": "^7.1.0",
    "@twurple/auth": "^7.1.0",
    "@twurple/eventsub-http": "^7.1.0",
    "@twurple/eventsub-ngrok": "^7.1.0",
    "apollo-server-express": "^3.3.0",
    "argon2": "^0.28.2",
    "connect-pg-simple": "^7.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.17.1",
    "express-session": "^1.17.2",
    "graphql": "^16.9.0",
    "graphql-fields": "^2.0.3",
    "graphql-parse-resolve-info": "^4.13.0",
    "graphql-scalars": "^1.23.0",
    "nodemon": "^3.0.2",
    "reflect-metadata": "^0.2.1",
    "socket.io": "^4.5.1",
    "tslib": "^2.6.2",
    "type-graphql": "^2.0.0-rc.2"
  },
  "devDependencies": {
    "@types/connect-pg-simple": "^7.0.0",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/node": "^16.9.1",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.4",
    "prisma": "^5.10.2",
    "tsc-alias": "^1.8.8",
    "typegraphql-prisma": "^0.27.2",
    "typescript": "^5.3.3"
  }
}